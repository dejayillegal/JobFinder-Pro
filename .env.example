# JobFinder Pro - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Local: postgresql://username:password@localhost:5432/jobfinder
# Replit: Auto-configured via DATABASE_URL secret
DATABASE_URL=postgresql://localhost:5432/jobfinder

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection URL for Celery background tasks
REDIS_URL=redis://localhost:6379/0

# Celery broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# IMPORTANT: Generate secure random strings for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE-A-SECURE-RANDOM-STRING-HERE-MIN-32-CHARS
JWT_SECRET_KEY=GENERATE-A-SECURE-RANDOM-STRING-HERE-MIN-32-CHARS
SESSION_SECRET=GENERATE-A-SECURE-RANDOM-STRING-HERE-MIN-32-CHARS

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API KEYS - Job Connectors
# =============================================================================
# Set to false to enable real API calls (requires API credentials)
MOCK_CONNECTORS=false

# Adzuna API - Get credentials at https://developer.adzuna.com/
ADZUNA_APP_ID=your-adzuna-app-id-here
ADZUNA_API_KEY=your-adzuna-api-key-here

# Other connectors (Leave empty to use mock data - recommended for legal/ToS compliance)
INDEED_API_KEY=
JOOBLE_API_KEY=
LINKEDIN_API_KEY=
NAUKRI_API_KEY=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=5000
FRONTEND_URL=http://localhost:3000
DEBUG=true
DEV_MODE=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# RESUME PROCESSING
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx,txt
SPACY_MODEL=en_core_web_sm
USE_EMBEDDINGS=false

# =============================================================================
# JOB MATCHING
# =============================================================================
DEFAULT_COUNTRY=India
PRIORITY_LOCATIONS=Bangalore,Remote
MIN_MATCH_SCORE=50
MAX_MATCHES=50
JOB_REFRESH_INTERVAL=24

# =============================================================================
# RATE LIMITING & MONITORING
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_METRICS=true
SENTRY_DSN=

# =============================================================================
# OPTIONAL - EMAIL (Future feature)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@jobfinder.example.com

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=./uploads