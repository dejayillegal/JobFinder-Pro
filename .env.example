# JobFinder Pro - Environment Configuration Template
# Copy this file to .env and fill in your values
# =============================================================================

# DATABASE CONFIGURATION
# =============================================================================
# Local PostgreSQL setup:
# 1. Install PostgreSQL: https://www.postgresql.org/download/
#    macOS: brew install postgresql@15
#    Ubuntu: sudo apt-get install postgresql
# 2. Start PostgreSQL service:
#    macOS: brew services start postgresql@15
#    Linux: sudo systemctl start postgresql
# 3. Create database: createdb jobfinder
# 4. Format: postgresql://username:password@host:port/database
#    Default local: postgresql://localhost:5432/jobfinder
#    With credentials: postgresql://myuser:mypass@localhost:5432/jobfinder
DATABASE_URL=postgresql://localhost:5432/jobfinder

# REDIS CONFIGURATION
# =============================================================================
# Local Redis setup:
# 1. Install Redis: https://redis.io/download/
#    macOS: brew install redis
#    Ubuntu: sudo apt-get install redis-server
# 2. Start Redis:
#    macOS: brew services start redis
#    Linux: sudo systemctl start redis-server
# 3. Verify: redis-cli ping (should return PONG)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# SECURITY CONFIGURATION
# =============================================================================
# Generate secure keys using this command:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# Run it 2 times to get different keys for SECRET_KEY and JWT_SECRET_KEY
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# APPLICATION SETTINGS
# =============================================================================
DEBUG=true
DEV_MODE=true
LOG_LEVEL=INFO

# JOB CONNECTORS - Set to false to use real APIs
# =============================================================================
# Set to true to use mock data, false to use real job APIs
MOCK_CONNECTORS=false

# Adzuna API (FREE - Recommended for real job data)
# =============================================================================
# How to get Adzuna credentials:
# 1. Go to: https://developer.adzuna.com/
# 2. Click "Sign Up" and create a free account
# 3. After login, click "Create Application"
# 4. Fill in application name (e.g., "JobFinder Pro Dev")
# 5. Copy your App ID and App Key from the dashboard
# Note: Free tier includes 1000 API calls per month
ADZUNA_APP_ID=your_app_id_here

# Other Job Connectors (Optional)
# =============================================================================
# Indeed API: Currently using RSS feeds (no credentials needed)
# To get Indeed Publisher ID:
# 1. Visit: https://www.indeed.com/publisher
# 2. Sign up for publisher account (may require approval)
# 3. Get publisher ID from dashboard
INDEED_API_KEY=

# Jooble API: https://jooble.org/api/about
# 1. Visit: https://jooble.org/api/about
# 2. Fill out the API request form
# 3. Wait for approval email with API key
JOOBLE_API_KEY=

# LinkedIn API: Not recommended (requires company approval)
# Naukri API: Not recommended (no public API available)
LINKEDIN_API_KEY=
NAUKRI_API_KEY=

# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=["pdf","doc","docx"]

# RSS Feed Settings
RSS_FEED_CACHE_TTL=3600
RSS_MAX_FEEDS_PER_SOURCE=50

# Web Scraping Settings (Use with caution - check ToS)
SCRAPING_ENABLED=false
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; JobFinderBot/1.0)
SCRAPING_DELAY_MIN=2.0
SCRAPING_DELAY_MAX=5.0

# Job Matching Algorithm
SIMILARITY_THRESHOLD=0.3
SKILLS_WEIGHT=0.5
EXPERIENCE_WEIGHT=0.25
LOCATION_WEIGHT=0.15
TITLE_WEIGHT=0.10

# Vector Database (Optional)
USE_VECTOR_DB=false
VECTOR_DB_TYPE=faiss
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# ADVANCED FEATURES
# =============================================================================
# Use advanced NLP-based matching (recommended)
USE_ADVANCED_MATCHING=true

# Enable job deduplication across sources
ENABLE_JOB_DEDUPLICATION=true

# Job cache time-to-live in hours
JOB_CACHE_TTL_HOURS=24

# spaCy model for NLP (en_core_web_sm, en_core_web_md, en_core_web_lg)
SPACY_MODEL=en_core_web_sm

# RAPIDAPI CONFIGURATION (Optional - for additional job sources)
# =============================================================================
# Get RapidAPI key: https://rapidapi.com/
# Subscribe to JSearch API: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
RAPIDAPI_KEY=your_rapidapi_key_here