
# JobFinder Pro - Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/jobfinder

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection URL for Celery background tasks
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT signing key - MUST be at least 32 characters
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-chars-change-in-production

# Session encryption key
SESSION_SECRET=your-session-secret-here-min-32-chars-change-in-production

# =============================================================================
# API KEYS (OPTIONAL)
# =============================================================================
# Adzuna API credentials (sign up at https://developer.adzuna.com/)
# If not provided, mock data will be used
ADZUNA_APP_ID=
ADZUNA_API_KEY=

# Future API integrations (currently using mock data)
INDEED_API_KEY=
JOOBLE_API_KEY=
LINKEDIN_API_KEY=
NAUKRI_API_KEY=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Enable debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Application environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# API server host and port
API_HOST=0.0.0.0
API_PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# Celery broker URL (usually same as REDIS_URL)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Allowed file extensions
ALLOWED_EXTENSIONS=pdf,docx,txt

# Upload directory
UPLOAD_DIR=./uploads

# =============================================================================
# JOB MATCHING CONFIGURATION
# =============================================================================
# Minimum match score to show (0-100)
MIN_MATCH_SCORE=50

# Maximum number of matches to return per query
MAX_MATCHES=50

# Job refresh interval in hours
JOB_REFRESH_INTERVAL=24

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL - for future use)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@jobfinder.example.com

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# =============================================================================
# RATE LIMITING
# =============================================================================
# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Requests per minute
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# REPLIT-SPECIFIC (automatically set in Replit environment)
# =============================================================================
# These are automatically configured by Replit, no need to set manually
# REPL_ID=
# REPL_OWNER=
# REPL_SLUG=
